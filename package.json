{
  "name": "pern",
  "version": "0.1.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "setup": "yarn && yarn --cwd client install && yarn --cwd server install",
    "server:dev": "yarn --cwd server run dev",
    "server:start": "yarn --cwd server run start",
    "client:dev": "yarn --cwd client run dev",
    "client:start": "yarn --cwd client run start",
    "dev": "concurrently \"yarn run server:dev\" \"yarn run client:dev\" ",
    "start": "concurrently \"yarn run server:start\" \"yarn run client:start\" ",
    "heroku-postbuild": "yarn run setup && yarn --cwd server run build && yarn --cwd client run build"
  },
